{
  "name": "varaha-silks-backend",
  "version": "2.0.0",
  "description": "Consolidated backend server for Varaha Silks - All services in one place",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "razorpay": "node razorpay-server.js",
    "dev:razorpay": "nodemon razorpay-server.js",
    "build": "npm run clean && npm run copy-files",
    "clean": "node -e \"const fs=require('fs');if(fs.existsSync('dist'))fs.rmSync('dist',{recursive:true})\"",
    "copy-files": "node -e \"const fs=require('fs');const path=require('path');fs.mkdirSync('dist',{recursive:true});function copyDir(src,dest){if(!fs.existsSync(dest))fs.mkdirSync(dest,{recursive:true});fs.readdirSync(src).forEach(file=>{const srcPath=path.join(src,file);const destPath=path.join(dest,file);if(fs.statSync(srcPath).isDirectory()){copyDir(srcPath,destPath)}else{fs.copyFileSync(srcPath,destPath)}})}copyDir('src','dist/src');fs.copyFileSync('package.json','dist/package.json');fs.copyFileSync('package-lock.json','dist/package-lock.json');if(fs.existsSync('.env'))fs.copyFileSync('.env','dist/.env');console.log('Build completed successfully')\"",
    "postinstall": "echo 'Dependencies installed successfully'"
  },
  "dependencies": {
    "axios": "^1.12.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "firebase-admin": "^12.0.0",
    "razorpay": "^2.9.2"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "rimraf": "^6.0.1"
  },
  "keywords": [
    "razorpay",
    "firebase",
    "payment",
    "backend",
    "api",
    "ecommerce",
    "silk",
    "sarees"
  ],
  "author": "Varaha Silks",
  "license": "MIT"
}
